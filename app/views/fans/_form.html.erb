<%= form_for(@fan) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input-style" %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "input-style"  %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, class: "input-style"  %>
  </div>
  <div class="form-group">
    <%= f.label :photo %>
    <%= f.text_field :photo, class: "input-style"  %>
  </div>
  <%= f.submit class: "form-button-style" %>
<% end %>
