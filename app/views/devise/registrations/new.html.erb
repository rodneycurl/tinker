<h2>Sign up</h2>
  <div class="form-style">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "input-style" %>
      </div>
      <div class="form-group">
        <%= f.label :location %><br />
        <%= f.text_field :location, autofocus: true, class: "input-style" %>
      </div>
      <div class="form-group">
        <%= f.label :age %><br />
        <%= f.text_field :age, autofocus: true, class: "input-style" %>
      </div>
      <div class="form-group">
        <%= f.label :photo %><br />
        <%= f.text_field :photo, autofocus: true, class: "input-style" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "input-style" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "input-style" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-style" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "form-button-style" %>
      </div>
    <% end %>
</div>
